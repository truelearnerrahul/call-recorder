<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recording_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/primary_text_dark" />

        <!-- Badge shown for items imported via Share -->
        <TextView
            android:id="@+id/recording_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:text="@string/shared" />

        <TextView
            android:id="@+id/recording_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/secondary_text_dark"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/recording_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/secondary_text_dark"
            android:paddingTop="2dp"
            android:text="0:00" />

        <SeekBar
            android:id="@+id/recording_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/recording_play_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_clickable_circle"
        android:padding="8dp"
        android:contentDescription="@string/play"
        android:src="@drawable/ic_play_vector" />

    <ImageButton
        android:id="@+id/recording_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_clickable_circle"
        android:padding="8dp"
        android:contentDescription="@string/more_options"
        android:src="@drawable/ic_more_vert_24" />

</LinearLayout>
